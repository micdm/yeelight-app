<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/v__devices__discovering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/v__devices__discovering"/>
    <LinearLayout
        android:id="@+id/v__devices__discovered"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/v__devices__status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/v__devices__devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <micdm.yeelight.ui.views.RetryView
        android:id="@+id/v__devices__cannot_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:label="@string/v__devices__retry"/>
</FrameLayout>
